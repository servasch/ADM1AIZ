FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      pH;
}
// * pH * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 6.5;

boundaryField
{
    inlet
    {

	type	groovyBC;
	valueExpression "pHOutlet";
	variables "pHOutlet{outlet}=average(pH);";
	value uniform 6.5;
    }

    outlet
    {
        type            fixedValue;
        value           uniform 6.5;
    }

    wall
    {
        type            zeroGradient;
    }

    wall-tank
    {
        type            zeroGradient;
    }

    bot
    {
        type            zeroGradient;
    }


    frontAndBackPlanes
    {
        type            empty;
    }
}

