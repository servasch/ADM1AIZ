FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 308;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 300;
    }

    outlet
    {
        type            fixedValue;
        value           uniform 300;
    }

    wall
    {
        type            fixedValue;
        value           uniform 300;
    }

    wall-tank
    {
        type            fixedValue;
        value           uniform 300;
    }

    bot
    {
        type            fixedValue;
        value           uniform 300;
    }


    frontAndBackPlanes
    {
        type            empty;
    }
}

