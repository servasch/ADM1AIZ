FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      X6;
}
// * LCFA Degraders * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0.44433; //kg/m3

boundaryField
{
    inlet
    {
	type	groovyBC;
	valueExpression "X6Outlet";
	variables "X6Outlet{outlet}=average(X6);";
	value uniform 0.44433;
    }

    outlet
    {
        type            fixedValue;
        value           uniform 0.44433;
    }

    wall
    {
        type            zeroGradient;
    }

    wall-tank
    {
        type            zeroGradient;
    }

    bot
    {
        type            zeroGradient;
    }


    frontAndBackPlanes
    {
        type            empty;
    }
}

