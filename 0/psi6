FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      psi6;
}
// * LCFA * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0.29533; //kg/m3

boundaryField
{
    inlet
    {
	type	groovyBC;
	valueExpression "psi6Outlet";
	variables "psi6Outlet{outlet}=average(psi6);";
	value uniform 0.29533;

    }

    outlet
    {
        type            fixedValue;
        value           uniform 0.29533;
    }

    wall
    {
        type            zeroGradient;
    }

    wall-tank
    {
        type            zeroGradient;
    }

    bot
    {
        type            zeroGradient;
    }


    frontAndBackPlanes
    {
        type            empty;
    }
}

