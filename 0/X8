FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      X8;
}
// * Acetate degraders * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0.508;

boundaryField
{
    inlet
    {
	type	groovyBC;
	valueExpression "X8Outlet";
	variables "X8Outlet{outlet}=average(X8);";
	value uniform 0.508;
    }

    outlet
    {
        type            fixedValue;
        value           uniform 0.45;
    }

    wall
    {
        type            zeroGradient;
    }

    wall-tank
    {
        type            zeroGradient;
    }

    bot
    {
        type            zeroGradient;
    }


    frontAndBackPlanes
    {
        type            empty;
    }
}

