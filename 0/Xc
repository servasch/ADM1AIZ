FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      Xc;
}
// * decomposing Degraders * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 7.5567; // kg/m3 from DavidGaden

boundaryField
{
    inlet
    {
	type	groovyBC;
	valueExpression "XcOutlet";
	variables "XcOutlet{outlet}=average(Xc);";
	value uniform 37;
    }

    outlet
    {
        type            fixedValue;
        value           uniform 7.5567;
    }

    wall
    {
        type            zeroGradient;
    }

    wall-tank
    {
        type            zeroGradient;
    }

    bot
    {
        type            zeroGradient;
    }


    frontAndBackPlanes
    {
        type            empty;
    }
}

