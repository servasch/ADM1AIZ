end     (7 0 0);
fields  (psi4 psi5 psi6 psi7 psi77 psi777 psi8 CH4 H2 X1 X2 X3 X4 X5 X6 X7 X8 T pH);


interpolationScheme cellPoint;

setFormat   raw;

