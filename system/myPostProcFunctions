Description
    Writes graph data for specified fields along a line, specified by start
    and end points.

\*------------12---------------------------------------------------------------*/

volFieldValueAve
{
    type            volFieldValue;
    libs            ("libfieldFunctionObjects.so");

    log             true;
    writeControl    writeTime;
    writeFields     true;

    regionType      all;
    operation       volAverage; // weighted?


    fields
    (
        psi4
        psi5
        psi6
        psi7
        psi77
        psi777
        psi8
		CH4
        psiIN
	T
        Xc
        X1
        X2
        X3
        X4
        X5
        X6
        X7
        X8
	pH
	Hplus
	H2
	CO2
	amm
	XH2
    );
}

