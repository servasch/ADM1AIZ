FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      X1;
}
// * Carb Degraders * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0.0001; //from " David Gaden"

boundaryField
{
    inlet
    {
	type	groovyBC;
	valueExpression "X1Outlet";
	variables "X1Outlet{outlet}=average(X1);";
	value uniform 0.0006;
    }

    outlet
    {
        type            zeroGradient;
    }

    fixedWalls
    {
        type            zeroGradient;
    }


    frontAndBack
    {
        type            empty;
    }
}

