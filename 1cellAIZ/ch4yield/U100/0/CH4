FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      CH4;
}
// * Dissolved Methane * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0; //kg/m3

boundaryField
{
    inlet
    {
	type	groovyBC;
	valueExpression "CH4Outlet";
	variables "CH4Outlet{outlet}=0.01*average(CH4);";
	value uniform 0;
    }

    outlet
    {
        type            zeroGradient;
    }

    fixedWalls
    {
        type            zeroGradient;
    }


    frontAndBack
    {
        type            empty;
    }
}

