FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0.5";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0.12 0 0);

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform (2.5 0 0);   // this is based on 20d HRT (2.5 0 0), but since U050
    }
    outlet
    {
        type            fixedValue;
        value           uniform (2.5 0 0);
    }
    fixedWalls
    {
        type            zeroGradient;
    }
    frontAndBack
    {
        type            empty;
    }
}


// ************************************************************************* //
